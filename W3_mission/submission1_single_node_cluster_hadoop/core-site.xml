<configuration>
    <!-- <HDFS default filesystem URI> -->
    <property>
        <name>fs.defaultFS</name>
        <value>hdfs://localhost:9870</value>
    </property>

    <!-- <Temporary directory for Hadoop> -->
    <property>
        <name>hadoop.tmp.dir</name>
        <value>/tmp/hadoop-${user.name}</value>
    </property>

    <!-- Configuration for trash feature -->
    <property>
        <name>fs.trash.interval</name>
        <value>360</value>
    </property>
</configuration>